pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
a={x=10,y=100,size=8}
b={x=70,y=100,size=8}
function _update()
	if btn(➡️) then a.x+=2 end
	if btn(⬅️) then a.x-=2 end	
	dist=sqrt((a.x-b.x)^2+(a.y-b.y)^2)
	rad=(b.size+a.size)
	if(dist<=rad) then
		msg="boom!!"
	else 
		msg = "peace"
	end	
end
function _draw()
	cls()
	circfill(a.x,a.y,a.size,3)
	circfill(b.x,b.y,b.size,8)
	print(msg, 58,64, 7)
end
