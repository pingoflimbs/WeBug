pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
x=64
y=64
walk_cnt = 0
walk_spr = 8
spd = 2
sprite = 0
gnd = 100
function _update()
	if btn(0) then	
		x -= spd
		walk_cnt+=1
	end
	if btn(1) then	
		x += spd
		walk_cnt+=1
	end
	walk_cnt %= (walk_spr*2)
end

function _draw()
	cls()
	if(walk_cnt < walk_spr) then
		spr(0 , x, gnd) --sprite num: 0, 1
	else
		spr(1 , x, gnd) --sprite num: 2, 3
	end
end
